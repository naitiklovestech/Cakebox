<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A8C8FF"
                android:endColor="#73A4FA"
                android:angle="500" />
        </shape>
    </item>

    <!-- Convex Shape Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" />
            <corners
                android:topLeftRadius="5000sp"
                android:topRightRadius="5000sp"
                android:bottomLeftRadius="5000sp"
                android:bottomRightRadius="8000sp" />
            <size android:height="200dp" />
        </shape>
    </item>
</layer-list>
