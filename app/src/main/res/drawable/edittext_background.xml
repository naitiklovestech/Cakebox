<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border/stroke -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3"/> <!-- Light gray color for the border -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp" />

    <!-- Solid color inside -->
    <solid android:color="@android:color/transparent"/> <!-- No fill, transparent background -->

</shape>
