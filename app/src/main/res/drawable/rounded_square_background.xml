<!-- res/drawable/rounded_square_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="32dp" android:topRightRadius="32dp" />
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="4dp" android:color="@color/blue"/>
            <corners android:topLeftRadius="32dp" android:topRightRadius="32dp"/>
        </shape>
    </item>
</layer-list>
